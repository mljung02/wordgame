doctype html
html
  head
    title Level 2
    link(rel='stylesheet' href="/stylesheets/other.css")
    script(src='/javascripts/helpers.js')
    script(src="/javascripts/dictionary.js")
    script(src="/javascripts/alphabetDistribution.js")
    script(src='/javascripts/logic.js')
  body
    h2 Help Al fill his language modules before his energy is depleted!
    div#timer
    canvas#bcanvas
    canvas#canvas
    div#under
      div.spacer
      
      // 3 letter 1
      div.fire#fire31
        div.tiles-inactive(id="3.1.1")
        div.tiles-inactive(id="3.1.2")
        div.tiles-inactive(id="3.1.3")
      
      div.spacer
      
      // 4 letter 2
      div.fire#fire41
        div.tiles-inactive(id="4.1.1")
        div.tiles-inactive(id="4.1.2")
        div.tiles-inactive(id="4.1.3")
        div.tiles-inactive(id="4.1.4")
      
      div.spacer
      
      //5 letter
      div.fire#fire50
        div.tiles-inactive(id="5.0.1")
        div.tiles-inactive(id="5.0.2")
        div.tiles-inactive(id="5.0.3")
        div.tiles-inactive(id="5.0.4")
        div.tiles-inactive(id="5.0.5")
      
      div.spacer
      
      // 4 letter 2
      div.fire#fire42
        div.tiles-inactive(id="4.2.1")
        div.tiles-inactive(id="4.2.2")
        div.tiles-inactive(id="4.2.3")
        div.tiles-inactive(id="4.2.4")
      
      div.spacer
      
      // 3 letter 2
      div.fire#fire32
        div.tiles-inactive(id="3.2.1")
        div.tiles-inactive(id="3.2.2")
        div.tiles-inactive(id="3.2.3")
      
      if email
        div#login Logged in as #{email}
          span | 
          a(href='/logout') Log Out
    
    script(src='/javascripts/play.js')
