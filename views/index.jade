extends layout

block content
  h1 Alphabots
  if (!email)
    p Please log in to play.
      a.bump(href='/signup') Sign Up
      form(method='post' action='/login')
        p
          label(for='username') Username (e-mail):
          input(type='email' id='username' name='email')
        p
          label(for='password') Password:
          input(type='password' id='username' name='pw')
        button(type='submit') Log In
  if (email)
    p Welcome #{email}.
    p 
      a(href='/start') Continue
      div Level #{gameState.level} with #{gameState.scrap} Scrap
    p
      a(href="/new") New
  if email
    div#login Logged in as #{email}
      span | 
      a(href='/logout') Log Out